@model CHSAuction.Entities.ItemBid

@{
    ViewBag.Title = "Make a Bid";
}

<h2 hidden>Your Bid for this item is:</h2>

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="bidForm">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)


                <div class="col-md-10">
                    <h4>
                        Your previous bids were:  @Html.Action("BidHistory", "Bids", new { id = @Model.ItemId })
                    </h4>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-10">
                            <label>The minimum bid for this item is:  $</label>
                            @Html.EditorFor(model => model.Bid, "{0:c}", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Bid)
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-md-10">
                            <input type="submit" value="Submit My Bid" class="btn btn-default" />
                        </div>
                    </div>
                </div>

            }
        </section>
    </div>
</div>

<div class="row">
    <div class="col-md-10">
        <br/>
        @Html.ActionLink("Back to List", "Index", "Home") |
        @Html.ActionLink("Back to My Bids", "MyBids", "Home")
    </div>
</div>
